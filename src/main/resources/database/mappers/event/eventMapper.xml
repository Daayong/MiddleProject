<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.d.mp.event.EventDTO">
  
  	<!-- 진행중인 이벤트 list -->
  	<select id="getEventList" resultType="EventDTO">
  		SELECT * 
  		FROM 
  			event
  		WHERE 
  			event_type LIKE '%' || ing || '%' 
  		ORDER BY
 	 		 event_id DESC
  	</select>
  	
  	 <!-- 당첨자 발표 list -->
  	<select id="getWinnerList" resultType="EventDTO">
  		SELECT * 
  		FROM 
  			event
  		WHERE 
  			event_type LIKE '%' || winner || '%' 
  		ORDER BY
 	 		 event_id DESC
  	</select>
  	
  
  </mapper>